// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output = "../prisma/generated/type-graphql"
}

// TODO: add native types (like @db.VarChar(255)), can't do it right now because sqlite doesn't support it
model Project {
  id String @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId String
  name String @db.VarChar(50)
  isPublic Boolean
  summary String? @db.VarChar(250)
  description String?
  projectJson String?
  parentId String?
  parent Project? @relation("tree", fields: [parentId], references: [id])
  children Project[] @relation("tree")
}

model User {
  id String @id
  name String @unique @db.VarChar(20)
  bio String? @db.VarChar(160)
  url String? @db.VarChar(250)
  projects Project[]
}